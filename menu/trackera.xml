<menu  name="tracker" title="GPS Tracker menu">
        <item title="Log"  action='"Logging is "+ get("logging").status'>
            <item title="Toggle" action='"Logging is now " +get("logging").toggle().status'/>        
        </item>
        <item title="Markers">
               <item title="Marker"  action='"Marker is " + get("marker").value'>
                     <item action='"Logged " + get("track").log(get("marker").value)'/>
               </item>
               <item title="Increment">
                     <item title="Inc"   action='"Marker is " + get("marker").increment(1).value'/>
               </item>
               <item title="Decrement">
                     <item title="Dec"   action='"Marker is " + get("marker").decrement(1).value'/>
               </item>
        </item>
</menu>
